<?xml version="1.0"?>
<config>
    <tabs>
        <citrus translate="label" module="citrusintegration">
            <label>Citrus Integration</label>
            <sort_order>20</sort_order>
        </citrus>
    </tabs>
    <sections>
        <citrus translate="label" module="citrusintegration">
            <label>General Setting</label>
            <tab>citrus</tab>
            <frontend_type>text</frontend_type>
            <sort_order>30</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <citrus_group translate="label" module="citrusintegration">
                    <label>General Setting</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>

                    <fields>
                        <enable translate="label">
                            <label>Enable: </label>
                            <comment>Source model provider Magento's default Yes/No values</comment>
                            <frontend_type>select</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </enable>
                        <host translate="label">
                            <label>Host: </label>
                            <comment>Choose your host</comment>
                            <frontend_type>select</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>citrusintegration/system_config_source_host</source_model>
                        </host>
                        <team_id translate="label">
                            <label>Team Id: </label>
                            <comment>
                                1. Navigate to staging.citrusad.com.
                                2. Log in.
                                3. Click Integration Settings in the drop-down menu that appears when you click your name in the upper-right-hand corner of the Citrus User Interface.
                                4. Your team ID is displayed in the first field on the screen.
                            </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </team_id>
                        <api_key translate="label">
                            <label>Api Key: </label>
                            <comment>
                                1. Navigate to staging.citrusad.com.
                                2. Click on Integration Settings in the drop-down menu that appears when you click your name in the upper-right-hand corner of the Citrus User Interface.
                                3. Click Api Key.
                                4. Click the green Show button.
                                5. Click the green Copy button. This copies the API key to your clipboard.
                            </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </api_key>
                        <catalog_name>
                            <label>Catalog Name: </label>
                            <comment>

                            </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </catalog_name>
                    </fields>
                </citrus_group>

            </groups>
        </citrus>
        <citrus_sync translate="label" module="citrusintegration">
            <label>Synchronization Option</label>
            <tab>citrus</tab>
            <frontend_type>text</frontend_type>
            <sort_order>40</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <citrus_product>
                    <label>Product</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label comment">
                            <label>Enable: </label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <time_out translate="label">
                            <label>Time out: </label>
                            <comment>
                                The time out is in seconds.
                            </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </time_out>
                    </fields>

                    <fields>
                        <sync_mode>
                            <label>Sync Mode: </label>
                            <frontend_type>select</frontend_type>
                            <source_model>citrusintegration/system_config_source_option</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sync_mode>
                    </fields>

                    <fields>
                        <frequency translate="label comment">
                            <label>Time</label>
                            <frontend_type>select</frontend_type>
                            <source_model>citrusintegration/system_config_source_crontime</source_model>
                            <backend_model>backup/config_backend_cron</backend_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><sync_mode>1</sync_mode></depends>
                        </frequency>
                    </fields>
                    <fields>
                        <add translate="label">
                            <label>Add all products to queue</label>
                            <frontend_type>button</frontend_type>
                            <frontend_model>citrusintegration/adminhtml_system_config_form_button</frontend_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <button_url>adminhtml/citrusintegration_queue/product</button_url>
                        </add>
                    </fields>
                </citrus_product>
                <citrus_order>
                    <label>Order and Customer</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label comment">
                            <label>Enable: </label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <time_out translate="label">
                            <label>Time out: </label>
                            <comment>
                                The time out is in seconds.
                            </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </time_out>
                    </fields>

                    <fields>
                        <sync_mode>
                            <label>Sync Mode: </label>
                            <frontend_type>select</frontend_type>
                            <source_model>citrusintegration/system_config_source_option</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sync_mode>
                    </fields>

                    <fields>
                        <frequency translate="label comment">
                            <label>Time</label>
                            <frontend_type>select</frontend_type>
                            <source_model>citrusintegration/system_config_source_crontime</source_model>
                            <backend_model>backup/config_backend_cron</backend_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><sync_mode>1</sync_mode></depends>
                        </frequency>
                    </fields>

                    <fields>
                        <add_order translate="label">
                            <label>Add all orders to queue</label>
                            <frontend_type>button</frontend_type>
                            <frontend_model>citrusintegration/adminhtml_system_config_form_button</frontend_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <button_url>adminhtml/citrusintegration_queue/order</button_url>
                        </add_order>
                    </fields>

                    <fields>
                        <add_customer translate="label">
                            <label>Add all Customers to queue</label>
                            <frontend_type>button</frontend_type>
                            <frontend_model>citrusintegration/adminhtml_system_config_form_button</frontend_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <button_url>adminhtml/citrusintegration_queue/customer</button_url>
                        </add_customer>
                    </fields>
                </citrus_order>
                <citrus_banner>
                    <label>Banners</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label comment">
                            <label>Enable: </label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                    </fields>
                </citrus_banner>
                <citrus_ads>
                    <label>Ads</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label comment">
                            <label>Enable: </label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <time_out translate="label">
                            <label>Time out: </label>
                            <comment>
                                The time out is in seconds.
                            </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </time_out>
                    </fields>
                </citrus_ads>
                <product_attribute_filter>
                    <label>Product Attribute Filter</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <attribute translate="label comment">
                            <label>Select Attributes: </label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>citrusintegration/system_config_source_attribute</source_model>
                            <backend_model>citrusintegration/system_config_backend_product_attribute</backend_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </attribute>
                    </fields>
